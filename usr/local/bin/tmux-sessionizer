#!/usr/bin/env bash

# Fuzzy select microservice folders
selected=$(find ~/projects/*/* -maxdepth 0 -type d | fzf)

[[ -z $selected ]] && exit 0

project_dir=$(dirname "$selected")
project_name=$(basename "$project_dir" | tr . _)

tmux_running=$(pgrep tmux)

# If tmux not running and not inside a session, create new session
if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s "$project_name" -c "$selected"
    exit 0
fi

# If the session doesn't exist, create it (detached)
if ! tmux has-session -t "$project_name" 2>/dev/null; then
    tmux new-session -ds "$project_name" -c "$selected"
else
    # Check if a window is already open for that path
    if ! tmux list-windows -t "$project_name" -F "#{window_active}:#{pane_current_path}" | grep -q "$selected"; then
        tmux new-window -t "$project_name:" -c "$selected"
    fi
fi

# Attach or switch
if [[ -n $TMUX ]]; then
    tmux switch-client -t "$project_name"
    # Focus the window with that path if it exists
    tmux select-window -t "$project_name:" -c "$selected"
else
    tmux attach-session -t "$project_name"
fi
